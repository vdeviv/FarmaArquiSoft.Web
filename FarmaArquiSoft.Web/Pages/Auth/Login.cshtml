@page
@model FarmaArquiSoft.Web.Pages.Auth.LoginModel
@{
    Layout = "_LayoutAuth"; 
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="login-container">
    <div class="login-card shadow-lg border-0">

        <div class="text-center mb-4">
            <img src="~/images/LogoOficial.png" alt="Logo" class="login-logo mb-3" />
            <h2 class="fw-bold text-success mt-2">Iniciar Sesión</h2>
            <p class="text-muted">Accede al panel de gestión</p>
        </div>

        @if (TempData["Error"] is string e && !string.IsNullOrWhiteSpace(e))
        {
            <div class="alert alert-danger text-center">@e</div>
        }

        <form method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="mb-3 text-start">
                <label asp-for="Credentials.Username" class="form-label fw-semibold">Usuario</label>
                <input asp-for="Credentials.Username" class="form-control rounded-pill" placeholder="Ingrese su usuario" />
                <span asp-validation-for="Credentials.Username" class="text-danger small"></span>
            </div>

            <div class="mb-4 text-start">
                <label asp-for="Credentials.Password" class="form-label fw-semibold">Contraseña</label>

                <div class="position-relative">
                    <input asp-for="Credentials.Password"
                           type="password"
                           class="form-control rounded-pill pe-5"
                           id="passwordInput"
                           placeholder="Ingrese su contraseña" />

                    <button type="button"
                            class="btn btn-outline-success position-absolute top-50 end-0 translate-middle-y me-2 rounded-circle"
                            onclick="togglePassword()" tabindex="-1">
                        <i class="bi bi-eye" id="passwordIcon"></i>
                    </button>
                </div>

                <span asp-validation-for="Credentials.Password" class="text-danger small"></span>
            </div>

            <!-- BOTÓN -->
            <button type="submit" class="btn btn-success w-100 rounded-pill py-2 fw-semibold">
                <i class="bi bi-box-arrow-in-right me-2"></i>Ingresar
            </button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword() {
            const input = document.getElementById("passwordInput");
            const icon = document.getElementById("passwordIcon");

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            }
        }
    </script>
}