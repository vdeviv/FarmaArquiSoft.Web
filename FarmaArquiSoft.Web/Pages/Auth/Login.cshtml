@page
@model FarmaArquiSoft.Web.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Ingresar";
}

<div class="login-container">
    <div class="login-card">
        <img src="~/images/LogoOficial.png" alt="Logo" class="login-logo mb-3" />
        <h3 class="mb-3">Iniciar sesión</h3>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Credentials.Username" class="form-label">Usuario</label>
                <input asp-for="Credentials.Username" class="form-control" />
                <span asp-validation-for="Credentials.Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Credentials.Password" class="form-label">Contraseña</label>
                <input asp-for="Credentials.Password" type="password" class="form-control" />
                <span asp-validation-for="Credentials.Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success">Ingresar</button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
