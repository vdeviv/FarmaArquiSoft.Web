@page
@model FarmaArquiSoft.Web.Pages.Auth.ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
    // Si el usuario no ha cambiado pass, usa el layout Auth (bloqueado), sino el normal
    var hasChanged = User.FindFirst("HasChangedPassword")?.Value;
    Layout = (hasChanged == "false") ? "_LayoutAuth" : "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">
                <h3 class="fw-bold text-center text-success mb-4">
                    <i class="bi bi-shield-lock-fill me-2"></i>Seguridad
                </h3>

                @if (TempData["ForceMessage"] != null)
                {
                    <div class="alert alert-warning text-center">
                        <i class="bi bi-exclamation-circle me-1"></i> @TempData["ForceMessage"]
                    </div>
                }

                @* Mensajes de error generales (no asociados a un campo) *@
                <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center" role="alert"></div>

                <form method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.CurrentPassword" type="password" class="form-control rounded-3" placeholder="Contraseña actual" />
                        <label asp-for="Input.CurrentPassword">Contraseña Actual</label>
                        <span asp-validation-for="Input.CurrentPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" type="password" class="form-control rounded-3" placeholder="Nueva contraseña" />
                        <label asp-for="Input.NewPassword">Nueva Contraseña</label>
                        <div class="form-text small">Mínimo 8 caracteres.</div>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control rounded-3" placeholder="Repetir contraseña" />
                        <label asp-for="Input.ConfirmPassword">Confirmar Nueva Contraseña</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg rounded-pill fw-bold">Actualizar Contraseña</button>
                        @if (hasChanged != "false")
                        {
                            <a asp-page="/Users/Profile" class="btn btn-light rounded-pill">Cancelar</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}