@page
@model FarmaArquiSoft.Web.Pages.Auth.ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar contraseña";
}

<div class="container mt-5">
    <div class="card mx-auto" style="max-width:520px;">
        <div class="card-body">
            <h4 class="card-title mb-3">Cambiar contraseña</h4>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Payload.CurrentPassword" class="form-label">Contraseña actual</label>
                    <input asp-for="Payload.CurrentPassword" type="password" class="form-control" />
                    <span asp-validation-for="Payload.CurrentPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Payload.NewPassword" class="form-label">Nueva contraseña</label>
                    <input asp-for="Payload.NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="Payload.NewPassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="/Index" class="btn btn-outline-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-success">Cambiar contraseña</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
