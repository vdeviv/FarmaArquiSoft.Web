@page
@using System.Security.Claims
@model FarmaArquiSoft.Web.Pages.Users.ProfileModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-success text-white text-center py-4 rounded-top-4">
                    <div class="display-1 mb-2"><i class="bi bi-person-circle"></i></div>
                    <h2 class="fw-bold">@Model.CurrentUser.first_name @Model.CurrentUser.last_first_name</h2>
                    <span class="badge bg-light text-success rounded-pill px-3">@Model.CurrentUser.role</span>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="text-muted small text-uppercase fw-bold">Usuario</label>
                            <p class="fs-5 mb-0"><i class="bi bi-person-badge me-2 text-success"></i>@Model.CurrentUser.username</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small text-uppercase fw-bold">CI</label>
                            <p class="fs-5 mb-0"><i class="bi bi-card-heading me-2 text-success"></i>@Model.CurrentUser.ci</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small text-uppercase fw-bold">Correo</label>
                            <p class="fs-5 mb-0"><i class="bi bi-envelope me-2 text-success"></i>@Model.CurrentUser.mail</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small text-uppercase fw-bold">Teléfono</label>
                            <p class="fs-5 mb-0"><i class="bi bi-telephone me-2 text-success"></i>@Model.CurrentUser.phone</p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                        <a asp-page="/Auth/ChangePassword" class="btn btn-outline-success rounded-pill">
                            <i class="bi bi-shield-lock me-2"></i>Cambiar Contraseña
                        </a>

                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('¿Estás seguro de desactivar tu cuenta? Perderás el acceso inmediatamente.');">
                            <button type="submit" class="btn btn-danger rounded-pill">
                                <i class="bi bi-trash me-2"></i>Desactivar Cuenta
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>