@page "{id:int}"
@model FarmaArquiSoft.Web.Pages.Users.Edit
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark text-center rounded-top-4 py-3">
            <h3 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i>Editar Usuario
            </h3>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="Usuario.id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Usuario</label>
                    <input class="form-control rounded-pill" value="@Model.DisplayUsername" disabled />
                    <small class="text-muted">El nombre de usuario no se puede editar.</small>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Usuario.first_name" class="form-label fw-semibold">Nombre(s)</label>
                        <input asp-for="Usuario.first_name" class="form-control rounded-pill" required />
                        <span asp-validation-for="Usuario.first_name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Usuario.last_first_name" class="form-label fw-semibold">Apellido Paterno</label>
                        <input asp-for="Usuario.last_first_name" class="form-control rounded-pill" />
                        <span asp-validation-for="Usuario.last_first_name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Usuario.last_second_name" class="form-label fw-semibold">Apellido Materno</label>
                        <input asp-for="Usuario.last_second_name" class="form-control rounded-pill" />
                        <span asp-validation-for="Usuario.last_second_name" class="text-danger small"></span>
                    </div>

                    <!-- CI en 3 campos -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Carnet de Identidad</label>
                        <div class="input-group">
                            <!-- Prefijo opcional (1–2 letras) -->
                            <input asp-for="CiPrefix"
                                   class="form-control rounded-pill"
                                   style="max-width: 80px;"
                                   placeholder="AB"
                                   maxlength="2"
                                   title="Prefijo opcional, solo letras (máx. 2)" />

                            <!-- Número obligatorio (solo dígitos) -->
                            <input asp-for="CiNumber"
                                   class="form-control rounded-pill mx-1"
                                   placeholder="13065677"
                                   maxlength="12"
                                   title="Solo números" />

                            <!-- Sufijo opcional (1–2 letras) -->
                            <input asp-for="CiSuffix"
                                   class="form-control rounded-pill"
                                   style="max-width: 80px;"
                                   placeholder="C"
                                   maxlength="2"
                                   title="Sufijo opcional, solo letras (máx. 2)" />
                        </div>

                        <div class="mt-1 d-flex gap-3 flex-wrap">
                            <span asp-validation-for="CiPrefix" class="text-danger small"></span>
                            <span asp-validation-for="CiNumber" class="text-danger small"></span>
                            <span asp-validation-for="CiSuffix" class="text-danger small"></span>
                        </div>
                        <span asp-validation-for="Usuario.ci" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 d-none">
                        <label asp-for="Usuario.ci" class="form-label fw-semibold">CI completo</label>
                        <input asp-for="Usuario.ci" class="form-control rounded-pill" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Usuario.mail" class="form-label fw-semibold">Correo electrónico</label>
                        <input asp-for="Usuario.mail" class="form-control rounded-pill" required type="email" />
                        <span asp-validation-for="Usuario.mail" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Usuario.phone" class="form-label fw-semibold">Número de celular</label>
                        <input asp-for="Usuario.phone" class="form-control rounded-pill" required type="tel" />
                        <span asp-validation-for="Usuario.phone" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Usuario.role" class="form-label fw-semibold">Rol</label>
                        <select asp-for="Usuario.role" class="form-select rounded-pill" asp-items="Model.Roles"></select>
                        <span asp-validation-for="Usuario.role" class="text-danger small"></span>
                    </div>
                </div>

                <div class="form-check form-switch mt-3">
                    <input class="form-check-input" type="checkbox" role="switch" asp-for="Usuario.IsActive">
                    <label class="form-check-label" asp-for="Usuario.IsActive"></label>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-warning text-dark px-4 rounded-pill shadow-sm">
                        <i class="bi bi-save me-2"></i>Guardar Cambios
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary px-4 rounded-pill ms-2">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
