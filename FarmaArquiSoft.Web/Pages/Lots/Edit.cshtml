@page "{id:int}"
@model FarmaArquiSoft.Web.Pages.Lots.EditModel
@{
    ViewData["Title"] = "Editar Lote";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark text-center rounded-top-4 py-3">
            <h3 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i>Editar Lote
            </h3>
        </div>

        <div class="card-body p-4">
            <form method="post">

                <input type="hidden" asp-for="Input.id" />

                <!-- Igual que en Create: solo errores de modelo -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">CÃ³digo de Lote</label>
                        <input asp-for="Input.batch_number"
                               class="form-control rounded-pill"
                               readonly />
                        <span asp-validation-for="Input.batch_number" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Fecha de Vencimiento</label>
                        <input asp-for="Input.expiration_date"
                               type="date"
                               class="form-control rounded-pill"
                               required />
                        <span asp-validation-for="Input.expiration_date" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Cantidad Disponible</label>
                        <input asp-for="Input.quantity"
                               type="number"
                               min="1"
                               class="form-control rounded-pill"
                               required />
                        <span asp-validation-for="Input.quantity" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Costo Unitario (Bs.)</label>
                        <input asp-for="Input.unit_cost"
                               type="number"
                               step="0.01"
                               min="0"
                               class="form-control rounded-pill"
                               required />
                        <span asp-validation-for="Input.unit_cost" class="text-danger small"></span>
                    </div>

                </div>

                <div class="text-center mt-4">
                    <button type="submit"
                            class="btn btn-warning px-4 rounded-pill shadow-sm text-white">
                        <i class="bi bi-check2-circle me-2"></i>Actualizar
                    </button>

                    <a asp-page="Index"
                       class="btn btn-outline-secondary px-4 rounded-pill ms-2">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>

                <div class="col-md-12">
                    <label asp-for="Input.medicine_id" class="form-label fw-semibold">Medicamento</label>
                    <select asp-for="Input.medicine_id" class="form-select rounded-pill" asp-items="Model.MedicineOptions">
                        <option value="">-- Seleccione --</option>
                    </select>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
