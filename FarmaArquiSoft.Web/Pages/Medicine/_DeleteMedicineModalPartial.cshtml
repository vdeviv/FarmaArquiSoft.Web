<div class="modal fade" id="deleteMedicineModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center p-4 rounded-4 border-0 shadow-lg">

            <div class="text-danger mb-3">
                <i class="bi bi-capsule" style="font-size: 3rem;"></i>
                <i class="bi bi-x-lg position-absolute text-danger" style="font-size: 1.5rem; margin-left: -10px; margin-top: 20px;"></i>
            </div>

            <h4 class="fw-bold mb-2">Eliminar Medicamento</h4>

            <p class="text-muted mb-4" id="deleteMsg">
                ¿Estás seguro de eliminar este medicamento?
            </p>

            <form method="post" asp-page="Index" asp-page-handler="Delete">
                <input type="hidden" name="id" id="deleteId" />

                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm">
                        <i class="bi bi-trash3-fill me-2"></i>Eliminar
                    </button>
                    <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>