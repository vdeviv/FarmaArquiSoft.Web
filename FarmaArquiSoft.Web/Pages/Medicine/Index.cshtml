@page
@model FarmaArquiSoft.Web.Pages.Medicines.Index
@{
    ViewData["Title"] = "Gestión de Medicamentos";
}

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <h2 class="fw-bold text-success mb-0">
        <i class="bi bi-capsule me-2"></i> Gestión de Medicamentos
    </h2>
    <a asp-page="Create" class="btn btn-success shadow-sm rounded-pill px-4">
        <i class="bi bi-plus-circle me-2"></i> Nuevo Medicamento
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0 text-center">
            <thead class="table-success text-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Presentación</th>
                    <th>Proveedor</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Medicines != null && Model.Medicines.Any())
                {
                    foreach (var m in Model.Medicines)
                    {
                        <tr>
                            <td class="fw-bold">@m.Name</td>
                            <td><span class="badge bg-light text-dark border">@m.Presentation</span></td>
                            <td>
                                <div class="fw-semibold text-dark">
                                    <i class="bi bi-building me-1 text-success"></i>
                                    @(m.ProviderName ?? "Desconocido")
                                </div>
                            </td>
                            <td>
                                @if (!m.IsDeleted)
                                {
                                    <span class="badge bg-success rounded-pill">Activo</span>
                                }
                                else
                                {

                                    <span class="badge bg-secondary rounded-pill">Eliminado</span>
                                }
                            </td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@m.Id" class="btn btn-sm btn-outline-warning rounded-pill"><i class="bi bi-pencil"></i></a>
                                <button class="btn btn-sm btn-outline-danger rounded-pill" onclick="openDeleteModal(@m.Id, '@m.Name')"><i class="bi bi-trash3"></i></button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="text-muted py-4">No hay datos.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
<partial name="_DeleteMedicineModalPartial" />
@section Scripts {
    <script>
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteMedicineModal'));
        function openDeleteModal(id, name) {
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteMsg').textContent = `¿Eliminar "${name}"?`;
            deleteModal.show();
        }
    </script>
}