@page
@using FarmaArquiSoft.Web.DTOs
@model FarmaArquiSoft.Web.Pages.Medicines.Create
@{
    ViewData["Title"] = "Registrar Medicamento";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white text-center rounded-top-4 py-3">
            <h3 class="mb-0">
                <i class="bi bi-capsule me-2"></i>Registrar Nuevo Medicamento
            </h3>
        </div>

        <div class="card-body p-4">
            <form method="post" id="medicineForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Medicine.Name" class="form-label fw-semibold">Nombre del Medicamento</label>
                        <input asp-for="Medicine.Name" class="form-control rounded-pill" placeholder="Ej. Paracetamol 500mg" required />
                        <span asp-validation-for="Medicine.Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Medicine.Presentation" class="form-label fw-semibold">Presentación</label>
                        <select asp-for="Medicine.Presentation" class="form-select rounded-pill"
                                asp-items="Html.GetEnumSelectList<MedicinePresentation>()">
                            <option value="">-- Seleccione --</option>
                        </select>
                        <span asp-validation-for="Medicine.Presentation" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Medicine.ProviderId" class="form-label fw-semibold">Proveedor</label>
                        <select asp-for="Medicine.ProviderId" class="form-select rounded-pill" asp-items="Model.ProviderOptions">
                            <option value="">-- Seleccione un Proveedor --</option>
                        </select>
                        <span asp-validation-for="Medicine.ProviderId" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <h5 class="fw-bold text-secondary mb-3"><i class="bi bi-boxes me-2"></i>Asignación de Lotes</h5>

                <div class="row g-2 align-items-end mb-3">
                    <div class="col-md-10">
                        <label class="form-label small text-muted">Lotes Disponibles</label>
                        <select id="lotSelector" class="form-select rounded-pill">
                            <option value="">-- Seleccione un lote para agregar --</option>
                            @foreach (var lot in Model.AvailableLots)
                            {
                                <option value="@lot.id" data-info="Lote: @lot.batch_number | Vence: @lot.expiration_date.ToShortDateString()">
                                    @lot.batch_number (Cant: @lot.quantity) - Vence: @lot.expiration_date.ToShortDateString()
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-primary w-100 rounded-pill" onclick="addLot()">
                            <i class="bi bi-plus-lg"></i> Agregar
                        </button>
                    </div>
                </div>

                <div class="table-responsive border rounded-3 p-2 bg-light">
                    <table class="table table-sm mb-0" id="selectedLotsTable">
                        <thead>
                            <tr>
                                <th>Información del Lote</th>
                                <th class="text-end text-nowrap" style="width: 100px;">Acción</th>
                            </tr>
                        </thead>
                        <tbody id="lotsTableBody">
                            <tr id="noLotsRow">
                                <td colspan="2" class="text-center text-muted small py-3">No hay lotes asignados</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div id="hiddenInputsContainer"></div>


                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 rounded-pill shadow-sm">
                        <i class="bi bi-save me-2"></i>Guardar Medicamento
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary px-4 rounded-pill ms-2">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const addedLotIds = new Set();

        function addLot() {
            const selector = document.getElementById('lotSelector');
            const selectedOption = selector.options[selector.selectedIndex];
            const lotId = selectedOption.value;
            const lotText = selectedOption.getAttribute('data-info');

            if (!lotId) return; // Si no seleccionó nada

            if (addedLotIds.has(lotId)) {
                alert('Este lote ya ha sido agregado.');
                return;
            }

            // Quitar mensaje de "No hay lotes"
            const noLotsRow = document.getElementById('noLotsRow');
            if (noLotsRow) noLotsRow.style.display = 'none';

            // Agregar visualmente a la tabla
            const tbody = document.getElementById('lotsTableBody');
            const tr = document.createElement('tr');
            tr.id = `row-lot-${lotId}`;
            tr.innerHTML = `
                <td>${lotText}</td>
                <td class="text-end">
                    <button type="button" class="btn btn-sm btn-outline-danger border-0" onclick="removeLot('${lotId}')">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            `;
            tbody.appendChild(tr);

            // Agregar Input Oculto para el Post
            const container = document.getElementById('hiddenInputsContainer');
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'SelectedLotIds'; // Se bindeará a la propiedad List<int>
            input.value = lotId;
            input.id = `input-lot-${lotId}`;
            container.appendChild(input);

            addedLotIds.add(lotId);
            selector.value = ""; // Resetear selector
        }

        function removeLot(id) {
            // Remover fila visual
            document.getElementById(`row-lot-${id}`).remove();

            // Remover input oculto
            document.getElementById(`input-lot-${id}`).remove();

            addedLotIds.delete(id);

            // Si no quedan lotes, mostrar mensaje vacío
            if (addedLotIds.size === 0) {
                const noLotsRow = document.getElementById('noLotsRow');
                if (noLotsRow) noLotsRow.style.display = '';
            }
        }
    </script>
}