@page
@using FarmaArquiSoft.Web.DTOs
@model FarmaArquiSoft.Web.Pages.Medicines.Create
@{
    ViewData["Title"] = "Registrar Medicamento";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white text-center rounded-top-4 py-3">
            <h3 class="mb-0">
                <i class="bi bi-capsule me-2"></i>Registrar Nuevo Medicamento
            </h3>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Medicine.Name" class="form-label fw-semibold">Nombre del Medicamento</label>
                        <input asp-for="Medicine.Name" class="form-control rounded-pill" placeholder="Ej. Paracetamol 500mg" required />
                        <span asp-validation-for="Medicine.Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Medicine.Presentation" class="form-label fw-semibold">Presentaci√≥n</label>
                        <select asp-for="Medicine.Presentation" class="form-select rounded-pill"
                                asp-items="Html.GetEnumSelectList<MedicinePresentation>()">
                            <option value="">-- Seleccione --</option>
                        </select>
                        <span asp-validation-for="Medicine.Presentation" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Medicine.ProviderId" class="form-label fw-semibold">Proveedor</label>
                        <select asp-for="Medicine.ProviderId" class="form-select rounded-pill" asp-items="Model.ProviderOptions">
                            <option value="">-- Seleccione un Proveedor --</option>
                        </select>
                        <span asp-validation-for="Medicine.ProviderId" class="text-danger small"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 rounded-pill shadow-sm">
                        <i class="bi bi-save me-2"></i>Guardar Medicamento
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary px-4 rounded-pill ms-2">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}