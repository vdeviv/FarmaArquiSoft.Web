@page "{id:int}"
@using FarmaArquiSoft.Web.DTOs
@model FarmaArquiSoft.Web.Pages.Medicines.Edit
@{
    ViewData["Title"] = "Editar Medicamento";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark text-center py-3"><h3>Editar Medicamento</h3></div>
        <div class="card-body p-4">
            <form method="post">
                <input type="hidden" asp-for="Medicine.Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Medicine.Name" class="form-label">Nombre</label>
                        <input asp-for="Medicine.Name" class="form-control rounded-pill" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Medicine.Presentation" class="form-label">Presentaci√≥n</label>
                        <select asp-for="Medicine.Presentation" class="form-select rounded-pill" asp-items="Html.GetEnumSelectList<MedicinePresentation>()"></select>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="Medicine.ProviderId" class="form-label">Proveedor</label>
                        <select asp-for="Medicine.ProviderId" class="form-select rounded-pill" asp-items="Model.ProviderOptions"></select>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-warning rounded-pill px-4">Actualizar</button>
                    <a asp-page="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}