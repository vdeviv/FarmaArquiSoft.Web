@page
@model FarmaArquiSoft.Web.Pages.Sales.CreateModel
@{
    ViewData["Title"] = "Registro de Venta";
}

<h2 class="page-title text-success text-center mb-4">
    <i class="bi bi-cart-check me-2"></i>REGISTRO DE VENTA
</h2>

<form method="post" id="formVenta">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <!-- FECHA / USUARIO -->
    <div class="card shadow-sm border-0 mb-3">
        <div class="card-body d-flex justify-content-between bg-light rounded">
            <span><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")</span>
            <span><strong>Usuario:</strong> @Model.Usuario</span>
        </div>
    </div>

    <!-- CLIENTE -->
    <div class="card shadow-sm border-0 mb-3">
        <div class="card-header bg-success text-white py-2">
            <h5 class="mb-0 fs-6">
                <i class="bi bi-person me-2"></i>Datos del Cliente
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-2 align-items-center">
                <div class="col-md-4">
                    <label class="form-label small fw-bold">CI / NIT</label>
                    <div class="input-group">
                        <input asp-for="ClientId" id="txtNit" class="form-control" />
                        <button type="button" class="btn btn-outline-success" onclick="searchClient()">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">Nombre del Cliente</label>
                    <!-- Input visible SOLO para mostrar mensajes -->
                    <input id="txtClientName"
                           class="form-control bg-light"
                           readonly />

                    <!-- Input oculto que sí va al backend -->
                    <input type="hidden" asp-for="ClientName" />

                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="button"
                            class="btn btn-success w-100"
                            data-bs-toggle="modal"
                            data-bs-target="#modalNuevoCliente">
                        <i class="bi bi-person-plus"></i> Nuevo
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- PRODUCTO -->
    <div class="card shadow-sm border-0 mb-3">
        <div class="card-header bg-success text-white py-2">
            <h5 class="mb-0 fs-6">
                <i class="bi bi-capsule me-2"></i>Agregar Producto
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-2 align-items-center">
                <div class="col-md-9">
                    <select id="selProduct" class="form-select" asp-items="Model.MedicineOptions">
                        <option value="">-- Seleccione Medicamento --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="button"
                            class="btn btn-outline-success w-100"
                            onclick="addToCart()">
                        <i class="bi bi-plus-lg me-2"></i> AGREGAR
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- DETALLE -->
    <div class="card shadow-sm border-0 mb-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-success text-center">
                    <tr>
                        <th>Cantidad</th>
                        <th>Producto</th>
                        <th>Precio Unitario Bs.</th>
                        <th>Importe Bs.</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="cartBody"></tbody>
            </table>

            <div id="emptyCartMsg" class="text-center py-4 text-muted">
                <i class="bi bi-basket3 display-6 d-block mb-2"></i>
                No hay productos en la venta
            </div>
        </div>

        <div class="card-footer text-end">
            <h4 class="text-success fw-bold">
                Total: Bs. <span id="lblTotal">0.00</span>
            </h4>
        </div>
    </div>

    <div id="hiddenInputs"></div>

    <!-- BOTÓN -->
    <div class="text-center mb-5">
        <button type="button"
                class="btn btn-success btn-lg px-5 rounded-pill"
                onclick="openConfirmModal()">
            <i class="bi bi-check-circle-fill me-2"></i> REGISTRAR VENTA
        </button>
    </div>
</form>

<!-- ================= MODAL CONFIRMACIÓN ================= -->
<div class="modal fade" id="confirmVentaModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow rounded-4">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Confirmar Venta</h5>
                <button type="button" class="btn-close btn-close-white"
                        data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <p class="fw-bold">¿Desea registrar la venta?</p>
                <p>Total: <strong>Bs. <span id="modalTotal"></span></strong></p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button"
                        class="btn btn-outline-secondary"
                        data-bs-dismiss="modal">
                    Cancelar
                </button>
                <button type="submit"
                        form="formVenta"
                        class="btn btn-success px-4">
                    Confirmar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- ================= MODAL NUEVO CLIENTE ================= -->
<div class="modal fade" id="modalNuevoCliente" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Nuevo Cliente</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">

                <div class="mb-2">
                    <label>Nombre</label>
                    <input id="newFirst" class="form-control">
                </div>

                <div class="mb-2">
                    <label>Apellido</label>
                    <input id="newLast" class="form-control">
                </div>

                <div class="mb-2">
                    <label>CI / NIT</label>
                    <input id="newNit" class="form-control">
                </div>

                <div class="mb-2">
                    <label>Correo electrónico</label>
                    <input id="newEmail" class="form-control">
                </div>

            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button class="btn btn-success" onclick="guardarCliente()">Guardar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        async function searchClient() {
            const nitInput = document.getElementById('txtNit');
            const nameInput = document.getElementById('txtClientName');
            const query = nitInput.value.trim();

            if (!query) {
                alert("Ingrese CI o NIT.");
                return;
            }

            nameInput.value = "Buscando...";
            nameInput.className = "form-control bg-light text-muted";

            try {
                const response = await fetch(`?handler=SearchClient&query=${query}`);

                if (!response.ok) {
                    throw new Error("Respuesta inválida");
                }

                const data = await response.json();

                if (data && data.success === true && data.name) {
                    nameInput.value = data.name;
                    nameInput.className =
                        "form-control bg-success-subtle text-success fw-bold";
                }
        
                else {
                    nameInput.value = "CLIENTE NO ENCONTRADO";
                    nameInput.className =
                        "form-control bg-danger-subtle text-danger fw-bold";
                }

            } catch (error) {
                console.error(error);

               
                nameInput.value = "CLIENTE NO ENCONTRADO";
                nameInput.className =
                    "form-control bg-danger-subtle text-danger fw-bold";
            }
        }


        let cart = [];

        function openConfirmModal() {
            if (!validateForm()) return;

            document.getElementById('modalTotal').innerText =
                document.getElementById('lblTotal').innerText;

            new bootstrap.Modal(
                document.getElementById('confirmVentaModal')
            ).show();
        }

        function validateForm() {
            if (!document.getElementById('txtNit').value) {
                alert('Debe seleccionar un cliente');
                return false;
            }

            if (cart.length === 0) {
                alert('Agregue productos');
                return false;
            }

            return true;
        }

        // ============================================
        // 2. LÓGICA DEL CARRITO (RESTAURADA)
        // ============================================

        // La función openConfirmModal() ya usa la variable 'cart', así que la dejamos global.
        // Pero necesitamos las funciones para llenarla.

        async function addToCart() {
            const sel = document.getElementById('selProduct');
            const medId = sel.value;
            const medName = sel.options[sel.selectedIndex].text;
            const btnAdd = document.querySelector('button[onclick="addToCart()"]');

            if (!medId) {
                alert("Seleccione un medicamento.");
                return;
            }

            // Evitar duplicados
            if (cart.find(x => x.medId === medId)) {
                alert("Este producto ya está en la lista.");
                return;
            }

            try {
                // UI Feedback: Desactivar mientras busca precio
                sel.disabled = true;
                btnAdd.disabled = true;
                const originalText = btnAdd.innerHTML;
                btnAdd.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Buscando...';

                // 1. OBTENER PRECIO AUTOMÁTICO DESDE LOTES
                const response = await fetch(`?handler=GetPrice&medId=${medId}`);

                if (!response.ok) throw new Error("Error de red al obtener precio");

                const data = await response.json();

                if (!data.success) {
                    alert("No hay stock disponible para este producto (No se encontraron lotes activos).");
                    resetUi(originalText);
                    return;
                }

                const price = data.price;
                const stock = data.stock;

                // 2. AGREGAR AL ARRAY (Cantidad 1 por defecto)
                cart.push({
                    medId: medId,
                    medName: medName,
                    quantity: 1,
                    price: price,
                    stock: stock
                });

                resetUi(originalText);
                renderCart(); // Dibujar tabla

            } catch (error) {
                console.error(error);
                alert("Error al obtener precio del producto.");
                // resetUi se define abajo, pero en caso de error aquí lo simulamos:
                sel.disabled = false;
                btnAdd.disabled = false;
                btnAdd.innerHTML = '<i class="bi bi-plus-lg me-2"></i> AGREGAR';
            }

            function resetUi(text) {
                sel.value = "";
                sel.disabled = false;
                btnAdd.disabled = false;
                btnAdd.innerHTML = text || '<i class="bi bi-plus-lg me-2"></i> AGREGAR';
            }
        }

        // Función para actualizar cantidad desde el input de la tabla
        function updateQuantity(index, newQty) {
            newQty = parseInt(newQty);
            if (isNaN(newQty) || newQty < 1) newQty = 1;

            // Opcional: Validar stock máximo
            // if (newQty > cart[index].stock) {
            //     alert(`Solo hay ${cart[index].stock} unidades disponibles.`);
            //     newQty = cart[index].stock;
            // }

            cart[index].quantity = newQty;
            renderCart();
        }

        function removeFromCart(index) {
            cart.splice(index, 1);
            renderCart();
        }

        function renderCart() {
            const tbody = document.getElementById('cartBody');
            const hiddenDiv = document.getElementById('hiddenInputs');
            const lblTotal = document.getElementById('lblTotal');
            const emptyMsg = document.getElementById('emptyCartMsg');

            tbody.innerHTML = "";
            hiddenDiv.innerHTML = "";
            let total = 0;

            if (cart.length > 0) {
                if(emptyMsg) emptyMsg.style.display = 'none';
            } else {
                if(emptyMsg) emptyMsg.style.display = 'block';
            }

            cart.forEach((item, index) => {
                const subtotal = item.quantity * item.price;
                total += subtotal;

                // 1. Dibujar Fila Visual
                const row = `
                    <tr>
                        <td style="width: 100px;">
                            <input type="number" class="form-control form-control-sm text-center fw-bold"
                                   value="${item.quantity}" min="1"
                                   onchange="updateQuantity(${index}, this.value)"
                                   onkeyup="updateQuantity(${index}, this.value)"
                                   style="max-width: 80px; margin: auto;">
                        </td>
                        <td class="text-start">${item.medName}</td>
                        <td class="text-center">${item.price.toFixed(2)}</td>
                        <td class="text-center fw-bold">${subtotal.toFixed(2)}</td>
                        <td class="text-center" style="width: 50px;">
                            <button type="button" class="btn btn-sm text-danger border-0" onclick="removeFromCart(${index})">
                                <i class="bi bi-trash3-fill"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.innerHTML += row;

                // 2. Generar Inputs Ocultos para enviar al Servidor (Binding)
                hiddenDiv.innerHTML += `
                    <input type="hidden" name="Items[${index}].MedId" value="${item.medId}" />
                    <input type="hidden" name="Items[${index}].Quantity" value="${item.quantity}" />
                    <input type="hidden" name="Items[${index}].Price" value="${item.price}" />
                `;
            });

            if(lblTotal) lblTotal.textContent = total.toFixed(2);
        }
    </script>
}
