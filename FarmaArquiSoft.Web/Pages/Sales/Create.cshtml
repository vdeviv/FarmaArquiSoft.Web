@page
@model FarmaArquiSoft.Web.Pages.Sales.CreateModel
@{
    ViewData["Title"] = "Registro de Venta";
}

<div class="sales-form">

    <!-- TÍTULO -->
    <h2 class="text-center fw-bold mb-4">
        REGISTRO DE VENTA
    </h2>

    <form method="post">

        <!-- DATOS AUTOMÁTICOS -->
        <div class="card shadow-sm mb-4">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")
                </div>
                <div>
                    <strong>Usuario:</strong> @Model.Usuario
                </div>
            </div>
        </div>

        <!-- CLIENTE -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="fw-bold mb-3 text-success">Cliente</h5>

                <div class="row g-3 align-items-end">

                    <!-- CI / NIT -->
                    <div class="col-md-5">
                        <label class="form-label">CI / NIT Cliente</label>
                        <div class="input-group">
                            <input asp-for="ClientSearch"
                                   class="form-control"
                                   placeholder="Ingrese CI o NIT" />
                            <button type="button"
                                    class="btn btn-outline-success"
                                    title="Buscar cliente">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>

                    <!-- RAZÓN SOCIAL -->
                    <div class="col-md-5">
                        <label class="form-label">Cliente / Razón Social</label>
                        <input asp-for="ClientName"
                               class="form-control"
                               placeholder="Cliente seleccionado"
                               readonly />
                    </div>

                    <!-- NUEVO CLIENTE -->
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <a asp-page="/Client/Create"
                           class="btn btn-success w-100"
                           title="Registrar nuevo cliente">
                            <i class="bi bi-plus-lg"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>

        <!-- PRODUCTO -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="fw-bold mb-3 text-success">Producto a Agregar</h5>

                <div class="row g-3 align-items-end">

                    <div class="col-md-8">
                        <div class="input-group">
                            <input asp-for="ProductSearch"
                                   class="form-control"
                                   placeholder="Buscar medicamento" />
                            <button type="button"
                                    class="btn btn-outline-success"
                                    title="Buscar medicamento">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <button type="button"
                                class="btn btn-success w-100"
                                disabled>
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    </div>

                </div>
            </div>
        </div>

        <!-- DETALLE DE VENTA -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="fw-bold mb-3 text-success">Detalle de Venta</h5>

                <table class="table table-bordered align-middle text-center">
                    <thead class="table-success">
                        <tr>
                            <th style="width:120px">Cantidad</th>
                            <th>Descripción</th>
                            <th>Precio Unitario Bs.</th>
                            <th>Importe Bs.</th>
                            <th style="width:120px">Opción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Items.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-muted">
                                    No se agregaron productos a la venta
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var i in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <input type="number"
                                               value="@i.Quantity"
                                               class="form-control form-control-sm text-center" />
                                    </td>
                                    <td>@i.MedName</td>
                                    <td>@i.Price</td>
                                    <td>@i.SubTotal</td>
                                    <td class="text-center">
                                        <button asp-page-handler="RemoveItem"
                                                asp-route-medId="@i.MedId"
                                                class="btn btn-outline-danger btn-sm"
                                                title="Quitar producto">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- TOTAL -->
        <div class="card shadow-sm mb-4">
            <div class="card-body text-end">
                <h4 class="text-success">
                    Total Bs.: <strong>@Model.Total</strong>
                </h4>
            </div>
        </div>

        <!-- GUARDAR -->
        <div class="text-center mb-5">
            <button type="submit"
                    class="btn btn-success px-5"
                    onclick="return confirm('¿Desea registrar la venta?')">
                Guardar
            </button>
        </div>

    </form>
</div>
