@page
@model FarmaArquiSoft.Web.Pages.Sales.CreateModel
@{
    ViewData["Title"] = "Registro de Venta";
}

<h2 class="page-title text-success text-center mb-4">
    REGISTRO DE VENTA
</h2>

<form method="post">

    <!-- FECHA Y USUARIO -->
    <div class="card card-soft mb-3">
        <div class="card-body d-flex justify-content-between">
            <span>
                <strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")
            </span>
            <span>
                <strong>Usuario:</strong> @Model.Usuario
            </span>
        </div>
    </div>

    <!-- ================= CLIENTE ================= -->
    <div class="card card-soft mb-3">
        <div class="card-body">
            <h5 class="section-title">Cliente</h5>

            <div class="row g-2 align-items-center">

                <!-- CI / NIT -->
                <div class="col-md-5">
                    <input asp-for="ClientId"
                           class="form-control input-green"
                           placeholder="Ingrese CI o NIT" />
                </div>

                <!-- BUSCAR CLIENTE -->
                <div class="col-md-1 text-center">
                    <a asp-page="/Client/Index"
                       class="btn btn-outline-success"
                       title="Buscar cliente">
                        <i class="bi bi-search"></i>
                    </a>
                </div>

                <!-- NOMBRE CLIENTE -->
                <div class="col-md-4">
                    <input asp-for="ClientName"
                           class="form-control input-green"
                           placeholder="Cliente seleccionado"
                           readonly />
                </div>

                <!-- NUEVO CLIENTE -->
                <div class="col-md-2">
                    <a asp-page="/Client/Create"
                       class="btn btn-success w-100"
                       title="Nuevo cliente">
                        <i class="bi bi-plus-lg"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>

    <!-- ================= PRODUCTO ================= -->
    <div class="card card-soft mb-3">
        <div class="card-body">
            <h5 class="section-title">Producto a Agregar</h5>

            <div class="row g-2 align-items-center">

                <!-- BUSCADOR PRODUCTO -->
                <div class="col-md-8">
                    <input class="form-control input-green"
                           placeholder="Buscar medicamento"
                           disabled />
                </div>

                <!-- BUSCAR MEDICAMENTO -->
                <div class="col-md-1 text-center">
                    <a asp-page="/Medicine/Index"
                       class="btn btn-outline-success"
                       title="Buscar medicamento">
                        <i class="bi bi-search"></i>
                    </a>
                </div>

                <!-- AGREGAR (AÚN NO ACTIVO) -->
                <div class="col-md-3">
                    <button type="button"
                            class="btn btn-success w-100"
                            disabled>
                        <i class="bi bi-plus-lg"></i>
                    </button>
                </div>

            </div>
        </div>
    </div>

    <!-- ================= DETALLE ================= -->
    <div class="card card-soft mb-3">
        <div class="card-body">
            <h5 class="section-title">Detalle de Venta</h5>

            <table class="table table-bordered table-soft align-middle">
                <thead>
                    <tr>
                        <th style="width:120px">Cantidad</th>
                        <th>Descripción</th>
                        <th style="width:160px">Precio Unitario Bs.</th>
                        <th style="width:140px">Importe Bs.</th>
                        <th style="width:100px">Opción</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                No se agregaron productos a la venta
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Quantity</td>
                                <td>@item.MedName</td>
                                <td>@item.Price</td>
                                <td>@item.SubTotal</td>
                                <td class="text-center">
                                    <button asp-page-handler="RemoveItem"
                                            asp-route-medId="@item.MedId"
                                            class="btn btn-outline-danger btn-sm"
                                            title="Quitar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- ================= TOTAL ================= -->
    <div class="card card-soft mb-3">
        <div class="card-body text-end">
            <h4 class="text-success">
                Total Bs.: <strong>@Model.Total</strong>
            </h4>
        </div>
    </div>

    <!-- ================= GUARDAR ================= -->
    <div class="text-center mb-4">
        <button type="submit"
                class="btn btn-success px-5"
                onclick="return confirm('¿Desea registrar la venta?')">
            Guardar
        </button>
    </div>

</form>
