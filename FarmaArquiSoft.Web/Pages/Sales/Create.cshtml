@page
@model FarmaArquiSoft.Web.Pages.Sales.CreateModel
@{
    ViewData["Title"] = "Registro de Venta";
}

<h2 class="page-title text-success text-center mb-4">
    REGISTRO DE VENTA
</h2>

<form method="post">

    <!-- FECHA Y USUARIO -->
    <div class="card card-soft mb-3">
        <div class="card-body d-flex justify-content-between">
            <span><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")</span>
            <span><strong>Usuario:</strong> @Model.Usuario</span>
        </div>
    </div>

    <!-- ================= CLIENTE ================= -->
    <div class="card card-soft mb-3">
        <div class="card-body">
            <h5 class="section-title">Cliente</h5>

            <div class="row g-2 align-items-center">
                <div class="col-md-5">
                    <input asp-for="ClientId" class="form-control input-green"
                           placeholder="Ingrese CI o NIT" />
                </div>

                <div class="col-md-1 text-center">
                    <button type="button"
                            class="btn btn-outline-success"
                            data-bs-toggle="modal"
                            data-bs-target="#clientModal">
                        <i class="bi bi-search"></i>
                    </button>
                </div>

                <div class="col-md-4">
                    <input asp-for="ClientName"
                           class="form-control input-green"
                           placeholder="Cliente seleccionado"
                           readonly />
                </div>

                <div class="col-md-2">
                    <button type="button"
                            class="btn btn-success w-100"
                            data-bs-toggle="modal"
                            data-bs-target="#clientModal">
                        <i class="bi bi-plus-lg"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= PRODUCTO ================= -->
    <div class="card card-soft mb-3">
        <div class="card-body">
            <h5 class="section-title">Producto a Agregar</h5>

            <div class="row g-2 align-items-center">
                <div class="col-md-8">
                    <input class="form-control input-green"
                           placeholder="Buscar medicamento"
                           readonly />
                </div>

                <div class="col-md-1 text-center">
                    <button type="button"
                            class="btn btn-outline-success"
                            data-bs-toggle="modal"
                            data-bs-target="#medicineModal">
                        <i class="bi bi-search"></i>
                    </button>
                </div>

                <div class="col-md-3">
                    <button type="button"
                            class="btn btn-success w-100"
                            data-bs-toggle="modal"
                            data-bs-target="#medicineModal">
                        <i class="bi bi-plus-lg"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= DETALLE ================= -->
    <div class="card card-soft mb-3">
        <div class="card-body">
            <h5 class="section-title">Detalle de Venta</h5>

            <table class="table table-bordered table-soft align-middle">
                <thead>
                    <tr>
                        <th>Cantidad</th>
                        <th>Descripción</th>
                        <th>Precio Bs.</th>
                        <th>Importe Bs.</th>
                        <th>Opción</th>
                    </tr>
                </thead>
                <tbody>
                @if (!Model.Items.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            No se agregaron productos a la venta
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Quantity</td>
                            <td>@item.MedName</td>
                            <td>@item.Price</td>
                            <td>@item.SubTotal</td>
                            <td class="text-center">
                                <button asp-page-handler="RemoveItem"
                                        asp-route-medId="@item.MedId"
                                        class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>

    <!-- ================= TOTAL ================= -->
    <div class="card card-soft mb-3">
        <div class="card-body text-end">
            <h4 class="text-success">
                Total Bs.: <strong>@Model.Total</strong>
            </h4>
        </div>
    </div>

    <div class="text-center mb-4">
        <button type="submit"
                class="btn btn-success px-5"
                onclick="return confirm('¿Desea registrar la venta?')">
            Guardar
        </button>
    </div>

</form>

<!-- ================= MODAL CLIENTES ================= -->
<div class="modal fade" id="clientModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content p-3">
            <h5 class="mb-3">Buscar Cliente</h5>

            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>NIT / CI</th>
                        <th>Nombre Completo</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var c in Model.Clientes)
                {
                    <tr>
                        <td>@c.nit</td>
                        <td>@c.first_name @c.last_name</td>
                        <td>
                            <form method="post" asp-page-handler="SelectClient">
                                <input type="hidden" name="clientId" value="@c.id" />
                                <input type="hidden" name="clientName"
                                       value="@($"{c.first_name} {c.last_name}")" />
                                <button type="submit"
                                        class="btn btn-success btn-sm">
                                    Seleccionar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>
</div>


<!-- MODAL MEDICAMENTOS / LOTES -->
<div class="modal fade" id="medicineModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content p-3">
            <h5 class="mb-3">Seleccionar medicamento (por lote)</h5>

            <table class="table table-hover align-middle">
                <thead class="table-success">
                    <tr>
                        <th>Medicamento</th>
                        <th>Lote</th>
                        <th>Vencimiento</th>
                        <th>Stock</th>
                        <th>Precio Bs.</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var lot in Model.Lotes.Where(l => !l.is_deleted && l.quantity > 0))
                {
                    <tr>
                        <td>@lot.MedicineName</td>
                        <td>@lot.batch_number</td>
                        <td>@lot.expiration_date.ToString("dd/MM/yyyy")</td>
                        <td>@lot.quantity</td>
                        <td>@lot.unit_cost</td>
                        <td>
                            <form method="post" asp-page-handler="AddItem">
                                <input type="hidden" name="lotId" value="@lot.id" />
                                <input type="hidden" name="medId" value="@lot.medicine_id" />
                                <input type="hidden" name="medName" value="@lot.MedicineName" />
                                <input type="hidden" name="batchNumber" value="@lot.batch_number" />
                                <input type="hidden" name="quantity" value="1" />
                                <input type="hidden" name="price" value="@lot.unit_cost" />

                                <button class="btn btn-success btn-sm">
                                    <i class="bi bi-plus-lg"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>
</div>
