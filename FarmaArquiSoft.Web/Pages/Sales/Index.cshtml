@page
@model FarmaArquiSoft.Web.Pages.Sales.IndexModel
@{
    ViewData["Title"] = "Ventas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-success">
        <i class="bi bi-receipt me-2"></i> Registro de Ventas
    </h2>
    <a asp-page="Create" class="btn btn-success rounded-pill px-4">
        <i class="bi bi-plus-circle me-2"></i> Nueva Venta
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle text-center mb-0">
            <thead class="table-success">
                <tr>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th>Total (Bs.)</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Sales.Any())
                {
                    foreach (var s in Model.Sales)
                    {
                        <tr class="@(s.Status == "ANULADA" ? "table-secondary text-muted" : "")">
                            <td>@s.Date.ToShortDateString()</td>
                            <td>@(s.ClientName ?? s.ClientId)</td>
                            <td>Bs. @s.TotalAmount.ToString("F2")</td>
                            <td>
                                <span class="badge @(s.Status == "ACTIVA" ? "bg-success" : "bg-danger")">
                                    @s.Status
                                </span>
                            </td>
                            <td>
                                <!-- Ver Detalle -->
                                <button class="btn btn-sm btn-outline-primary"
                                        onclick="openDetail('@s.Id')">
                                    <i class="bi bi-eye"></i>
                                </button>

                                <!-- Anular -->
                                @if (s.Status == "ACTIVA")
                                {
                                    <form method="post"
                                          asp-page-handler="ToggleStatus"
                                          asp-route-saleId="@s.Id"
                                          class="d-inline">
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="py-4 text-muted">
                            No hay ventas registradas.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="_SaleDetailModal" />

@section Scripts {
    <script>
        async function openDetail(saleId) {
            const res = await fetch(`?handler=Details&saleId=${saleId}`);
            const data = await res.json();

            let html = "";
            let total = 0;

            data.forEach(d => {
                total += d.totalAmount;
                html += `
                    <tr>
                        <td>${d.medicineName}</td>
                        <td>${d.quantity}</td>
                        <td>Bs. ${d.unitPrice.toFixed(2)}</td>
                        <td>Bs. ${d.totalAmount.toFixed(2)}</td>
                    </tr>`;
            });

            document.getElementById("detailBody").innerHTML = html;
            document.getElementById("detailTotal").innerText =
                "Bs. " + total.toFixed(2);

            new bootstrap.Modal('#saleDetailModal').show();
        }
    </script>
}
